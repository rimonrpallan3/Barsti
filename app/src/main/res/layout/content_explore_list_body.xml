<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_10"
    android:layout_marginRight="@dimen/_10">

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Top Rated Home"
        android:textSize="@dimen/_18"
        android:layout_marginLeft="@dimen/_10"
        android:layout_marginRight="@dimen/_10"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvBodyList">
    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/btnExpandView"
        android:text="Show All Homes"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40"
        android:textColor="@color/splsh_bg"
        android:textSize="@dimen/_12"
        android:background="@drawable/rectangle_button2"
        android:layout_marginTop="@dimen/_10"
        android:onClick="btnSignUp"
        android:textAllCaps="false" />



</LinearLayout>