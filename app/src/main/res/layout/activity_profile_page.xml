<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/content_toolbar_landing" />

    <android.support.v4.widget.NestedScrollView
        android:layout_marginTop="@dimen/_80"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvProfilePage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="true"
                android:orientation="vertical"/>




        </FrameLayout>

    </android.support.v4.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/splsh_bg"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10"
            android:orientation="vertical">



            <TextView
                android:id="@+id/tvHomeAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10"
                android:textSize="@dimen/_18"
                android:layout_marginLeft="@dimen/_10"
                android:maxLines="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                android:text="90 BD / Night"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivFav1"
                    android:layout_width="@dimen/_18"
                    android:layout_height="@dimen/_18"
                    android:src="@drawable/favourite_icon"/>

                <ImageView
                    android:id="@+id/ivFav2"
                    android:layout_width="@dimen/_18"
                    android:layout_height="@dimen/_18"
                    android:src="@drawable/favourite_icon"/>

                <ImageView
                    android:id="@+id/ivFav3"
                    android:layout_width="@dimen/_18"
                    android:layout_height="@dimen/_18"
                    android:src="@drawable/favourite_icon"/>

                <ImageView
                    android:id="@+id/ivFav4"
                    android:layout_width="@dimen/_18"
                    android:layout_height="@dimen/_18"
                    android:src="@drawable/favourite_icon"/>

                <ImageView
                    android:id="@+id/ivFav5"
                    android:layout_width="@dimen/_18"
                    android:layout_height="@dimen/_18"
                    android:src="@drawable/favourite_icon"/>
                <TextView
                    android:id="@+id/tvFavValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10"
                    android:text="200"
                    android:layout_marginLeft="@dimen/_10"/>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llContBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:gravity="right|center"
            android:orientation="horizontal">


            <Button
                android:layout_width="@dimen/_100"
                android:layout_height="@dimen/_40"
                android:layout_marginRight="@dimen/_20"
                android:text="Book Now"
                android:background="@drawable/rectangle_button2"
                android:textColor="@color/splsh_bg"/>


        </LinearLayout>


    </LinearLayout>



</FrameLayout>