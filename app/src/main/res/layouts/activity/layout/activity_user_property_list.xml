<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/splsh_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBackbtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_15"
                android:gravity="left|center"
                android:onClick="ivBackbtn"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_20"
                android:gravity="left|center"
                android:text="@string/user_property_txt_heading"
                android:textSize="@dimen/_15"
                android:textStyle="bold" />


        </LinearLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10"
            android:layout_marginLeft="@dimen/_20"
            android:layout_marginRight="@dimen/_20"
            android:gravity="right"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10"
                    android:gravity="right"
                    android:orientation="horizontal">


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|center"
                        android:text="SecondItem"
                        android:textSize="@dimen/_12" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginBottom="@dimen/_10"
                    android:orientation="horizontal">


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="right|center"
                        android:text=" : Call"
                        android:textSize="@dimen/_12" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10"
                    android:gravity="right"
                    android:orientation="horizontal">


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:gravity="right|center"
                        android:text=" : Email"
                        android:textSize="@dimen/_12" />


                </LinearLayout>



            </LinearLayout>

            <com.voyager.barasti.custom.CircleImageView
                android:layout_width="@dimen/_90"
                android:layout_height="@dimen/_90"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_10"
                android:layout_marginLeft="@dimen/_10"
                android:src="@drawable/profile_image"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvAbtMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text=""
                />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/_20"
            android:layout_marginRight="@dimen/_20"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/_10"/>
        
        <android.support.v7.widget.RecyclerView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="false"
            android:isScrollContainer="false"
            android:layout_marginLeft="@dimen/_20"
            android:layout_marginRight="@dimen/_20"
            android:id="@+id/rvUserPropertyRating" />

        <Button
            android:id="@+id/viewReviewBtn"
            android:layout_width="@dimen/_100"
            android:layout_height="@dimen/_40"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/splsh_bg"
            android:background="@drawable/rectangle_button2"
            android:text="@string/user_property_txt_rate_more"
            android:layout_gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:background="@color/dividerColor"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/_20"
            android:layout_marginRight="@dimen/_20"
            android:layout_marginBottom="@dimen/_10"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rvUserProperties" />




    </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
    </LinearLayout>


</LinearLayout>